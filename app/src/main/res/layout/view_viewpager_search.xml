        android:scaleType="centerCrop"
        app:mCornerRadius="50"
        app:layout_constraintTop_toBottomOf="@+id/tv_viewpager_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
